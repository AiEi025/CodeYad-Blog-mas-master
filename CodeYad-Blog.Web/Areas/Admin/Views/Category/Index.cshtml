@model List<CodeYad_Blog.CoreLayer.DTOs.Categories.CategoryDto>
@{
    ViewData["title"] = "دسته بندی ها";
    ViewData["selected"] = "Category";
    int counter = 1;
}
<section class="content-header">
    <h1>
        @ViewData["title"]
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Category" asp-action="Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li><a href="#">مثال ها</a></li>
        <li class="active">@ViewData["title"]</li>
    </ol>
</section>
<section class="content">
    <a class="btn btn-success"style="margin-bottom:5px" asp-area="Admin" asp-controller="Category" asp-action="Add">افزودن گروه جدید</a>
    <div class="box box-primary">
    <div class="box box-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                     <th>#</th>      
                     <th>عنوان</th>  
                     <th>زیرگروه</th>
                     <th>عملیات</th> 
                </tr>
            </thead>
            <tbody>
                    @foreach (var item in Model.Where(predicate=>predicate.ParentId==null))
                    {
                        <tr>
                            <td>@counter</td>
                            <td>@item.Title</td>
                            <td>
                                @if (Model.Any(r => r.ParentId == item.Id))
                                {
                                    <ul>
                                        @foreach (var subcategory in Model.Where(predicate => predicate.ParentId == item.Id))
                                        {
                                            <li>
                                                @subcategory.Title
                                                <a class="btn btn-success btn-sm" asp-area="Admin" asp-controller="Category" asp-action="Add" asp-route-parentid="@subcategory.Id">زیرگروه</a>
                                            </li>

                                        }
                                    </ul>
                                }
                                
                            </td>
                            <td>
                                <a class="btn btn-info btn-sm" asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" >ویرایش</a>
                                <a class="btn btn-success btn-sm" asp-area="Admin" asp-controller="Category" asp-action="Add" asp-route-parentid="@item.Id">زیرگروه</a>
                            </td>
                        </tr>
                        counter += 1;
                    }
            </tbody>
        </table>
        </div>
    </div>
</section>