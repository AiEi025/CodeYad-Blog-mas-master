@using CodeYad_Blog.CoreLayer.DTOs.Posts
@model PostFilterDTO
@{
    ViewData["title"] = "دسته بندی ها";
    ViewData["selected"] = "Post";
    int counter = 1;
}
<section class="content-header">
    <h1>
        @ViewData["title"]
    </h1>
    <ol class="breadcrumb">
        <li><a asp-area="Admin" asp-controller="Category" asp-action="Index"><i class="fa fa-dashboard"></i> خانه</a></li>
        <li><a href="#">مثال ها</a></li>
        <li class="active">@ViewData["title"]</li>
    </ol>
</section>
<section class="content">
    <a class="btn btn-success" style="margin-bottom:5px" asp-area="Admin" asp-controller="Post" asp-action="Add">افزودن مقاله</a>
    <div class="box box-primary">
        <div class="box box-body">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>عکس</th>
                        <th>عنوان</th>
                        <th>slug</th>
                        <th>گروه</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Posts)
                    {
                        <tr>
                            <td>@counter</td>
                            <td>
                                <img src="/img/@item.ImageName">
                            </td>
                            <td>@item.Title</td>
                            <td>@item.Slug</td>
                            <td>@item.Category.Title</td>
                            <td>
                                <a class="btn btn-info btn-sm" asp-area="Admin" asp-controller="Post" asp-action="Edit" asp-route-id="@item.PostId">ویرایش</a>
                              
                            </td>
                        </tr>
                        counter += 1;
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>